{
    "compilerOptions": {
        "module": "esnext",
        "target": "ES2022",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "resolveJsonModule": true,
        "verbatimModuleSyntax": true,
        "jsx": "preserve",
        "lib": ["esnext", "dom", "dom.iterable"],
        "types": ["vite/client"],
        "composite": true
    },
    "exclude": ["node_modules"]
}
